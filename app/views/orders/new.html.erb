<h1>Novo Pedido</h1>


<% if @order_items.present? %>
  <%= form_with(model: @order) do |f| %>
      <% @order.order_items.each do |item| %>
        <div>
          <%= item.orderable.name %>
          <%= item.portion.full_description %>
          <%= item.note %>
        </div>
        <br/>
      <% end %>

      Total: R$ <%= @total %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :cpf %>
      <%= f.text_field :cpf %>
    </div>
    <%= f.hidden_field :establishment_id, value: current_user.establishment.id %>
    <div><%= f.submit 'Enviar' %></div>
  <% end %>
<% else %>
  <p>Seu pedido est√° vazio.</p>
<% end %>
