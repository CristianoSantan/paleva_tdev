<h1>Bebidas</h1>

<div>
  <%= link_to 'Cadastrar Bebida', new_drink_path %>
</div>
 <% @drinks.each do |drink| %>
  <div>
    <h3><%= link_to drink.name, drink_path(drink.id) %></h3>
    <dl>
      <% if drink.image.attached? %>
        <%= image_tag drink.image, alt: "", title: "Prato", width: "200" %>
      <% end %>
      <dt>Nome:</dt>
      <dd><%= drink.name %></dd>
    </dl>
  </div>
<% end %>

