<h1>Pratos</h1>

<div>
  <%= link_to 'Cadastrar Prato', new_dish_path %>
</div>
 <% @dishes.each do |dish| %>
  <div>
    <h3><%= link_to dish.name, dish_path(dish.id) %></h3>
    <dl>
      <dt>Nome:</dt>
      <dd><%= dish.name %></dd>
      <dt>Descrição:</dt>
      <dd><%= dish.description %></dd>
      <dt>Calorias:</dt>
      <dd><%= dish.calories %></dd>
    </dl>
  </div>
<% end %>

<% if @dishes.empty? %>
  <p>Não existem Pratos cadastrados</p>
<% end %>